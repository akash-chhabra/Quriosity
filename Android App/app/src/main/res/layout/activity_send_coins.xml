<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Send_Coins">

    <RelativeLayout
        android:id="@+id/_1"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/FROM"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/frm"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="From:     "
            android:layout_marginRight="20dp"
            android:textSize="20sp">
        </TextView>
        <Spinner
            android:layout_toEndOf="@id/frm"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/border2"
            android:paddingLeft="5dp">

        </Spinner>

    </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/_2"
        android:layout_below="@id/_1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/TO"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/too"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="To:          "
            android:layout_marginRight="20dp"
            android:textSize="20sp">
        </TextView>
        <Spinner
            android:layout_toEndOf="@id/too"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/border2"
            android:paddingLeft="5dp">

        </Spinner>

    </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/_3"
        android:layout_below="@id/_2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/AMOUNT"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/amt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Amount:"
            android:layout_marginRight="20dp"
            android:textSize="20sp">
        </TextView>
        <EditText
            android:layout_toEndOf="@id/amt"
            android:layout_width="200dp"
            android:inputType="number"
            android:layout_height="30dp"
            android:background="@drawable/border2"
            android:paddingLeft="5dp">

        </EditText>

    </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/_4"
        android:layout_below="@id/_3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/MINERFEE"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/miner"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Miner Fee:"
            android:layout_marginRight="20dp"
            android:textSize="20sp">
        </TextView>
        <EditText
            android:layout_toEndOf="@id/miner"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:background="@drawable/border2"
            android:paddingLeft="5dp">

        </EditText>

    </RelativeLayout>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/_4"
        android:layout_marginTop="20dp"
        android:text="PAY"
        android:layout_centerHorizontal="true">

    </Button>


    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:active_item_color="#ffffff"
        app:centre_button_color="#ffffff"
        app:inactive_item_color="#ffffff"
        app:space_background_color="@color/colorPrimary"
        app:centre_button_icon="@drawable/home_icon"
        app:space_item_icon_size="25dp"
        app:space_item_icon_only_size="@dimen/space_item_icon_only_size"
        app:space_item_text_size="@dimen/space_item_text_default_size" />

</RelativeLayout>