<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Send_Coins">

    <RelativeLayout
        android:id="@+id/_2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/TO"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/too"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="To:           "
            android:layout_marginRight="20dp"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:textSize="20sp">
        </TextView>
        <Spinner
            android:id="@+id/coin_spin"
            android:layout_toEndOf="@id/too"
            android:layout_width="150dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:background="@drawable/border2"
            android:paddingLeft="5dp">

        </Spinner>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/mine_the_coin"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:scaleType="fitCenter"
            android:layout_toEndOf="@id/coin_spin"
            app:lottie_fileName="user3.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

    </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/_3"
        android:layout_below="@id/_2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/AMOUNT"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/amt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Amount:"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="27dp"
            android:textSize="20sp">
        </TextView>
        <EditText
            android:id="@+id/et_amount"
            android:layout_toEndOf="@id/amt"
            android:layout_width="150dp"
            android:inputType="number"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/border2"
            android:paddingLeft="5dp">

        </EditText>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/mine_the_coin1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:scaleType="fitCenter"
            android:layout_toEndOf="@id/et_amount"
            app:lottie_fileName="money_stack.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

    </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/_4"
        android:layout_below="@id/_3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/MINERFEE"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/miner"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Miner Fee:"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="20sp">
        </TextView>
        <EditText
            android:id="@+id/miner_fee"
            android:layout_toEndOf="@id/miner"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:layout_centerVertical="true"
            android:background="@drawable/border2"
            android:paddingLeft="5dp">

        </EditText>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/mine_the_coin2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:scaleType="fitCenter"
            android:layout_toEndOf="@id/miner_fee"
            app:lottie_fileName="exchange.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

    </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/_4"
        android:layout_marginTop="20dp"
        android:text="PAY"
        android:layout_centerHorizontal="true">

    </Button>


    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:active_item_color="#ffffff"
        app:centre_button_color="#ffffff"
        app:inactive_item_color="#ffffff"
        app:space_background_color="@color/colorPrimary"
        app:centre_button_icon="@drawable/home_icon"
        app:space_item_icon_size="25dp"
        app:space_item_icon_only_size="@dimen/space_item_icon_only_size"
        app:space_item_text_size="@dimen/space_item_text_default_size" />

</RelativeLayout>