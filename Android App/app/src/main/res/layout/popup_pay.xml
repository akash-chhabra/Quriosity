<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/TO"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/too"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="To:          "
            android:layout_marginRight="20dp"
            android:textSize="20sp">
        </TextView>
        <Spinner
            android:id="@+id/spin"
            android:layout_toEndOf="@id/too"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/border2"
            android:paddingLeft="5dp">

        </Spinner>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/AMOUNT"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_below="@id/TO"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/amt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Amount:"
            android:layout_marginRight="20dp"
            android:textSize="20sp">
        </TextView>
        <EditText
            android:id="@+id/et_amount"
            android:layout_toEndOf="@id/amt"
            android:layout_width="200dp"
            android:inputType="number"
            android:layout_height="30dp"
            android:background="@drawable/border2"
            android:paddingLeft="5dp">

        </EditText>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/MINERFEE"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_below="@id/AMOUNT"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/miner"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Miner Fee:"
            android:layout_marginRight="20dp"
            android:textSize="20sp">
        </TextView>
        <EditText
            android:id="@+id/et_miner_reward"
            android:layout_toEndOf="@id/miner"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:background="@drawable/border2"
            android:paddingLeft="5dp">

        </EditText>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/MINERFEE"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/pop_next_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginRight="80dp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/pop_next_display"
            android:textColor="#000000"
            android:layout_below="@id/textView">
        </Button>
        <Button
            android:id="@+id/pop_next_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_below="@id/textView">
        </Button>
    </LinearLayout>
</RelativeLayout>