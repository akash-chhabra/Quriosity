<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:id="@+id/imgv"
        android:src="@drawable/t_pending">

    </ImageView>

    <RelativeLayout
        android:id="@+id/FROM"
        android:layout_marginTop="30dp"
        android:layout_below="@id/imgv"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/frm"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Pending:"
            android:layout_marginRight="20dp"
            android:textSize="20sp">
        </TextView>
        <Spinner
            android:id="@+id/spin_pending"
            android:layout_toEndOf="@id/frm"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/border">

        </Spinner>

    </RelativeLayout>

    <Button
        android:id="@+id/mining"
        android:layout_width="wrap_content"
        android:text="Mine Transaction!"
        android:layout_height="wrap_content"
        android:layout_below="@id/FROM"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp">
    </Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mining"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/pop_back_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginRight="80dp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/pop_next_display"
            android:textColor="#000000"
            android:layout_below="@id/textView">
        </Button>
        <Button
            android:id="@+id/pop_next_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_below="@id/textView">
        </Button>
    </LinearLayout>
</RelativeLayout>